<%- include('./layout/header') %>
<div class="ui items" style="padding: 0 100px;">
    <% borrowUser.forEach(function(user){ %>
    <div class="item">
        <a class="ui tiny image" href="/profile/<%= user.userId%>"  style="width: 72px; height: 72px; overflow: hidden; background: #eee;">
            <img src="/img/<%= user.avatar%>">
        </a>
        <a class="ui tiny image" style="width: 72px; height: 72px; overflow: hidden; background: #eee;">
            <img src="/img/<%= user.partpic%>">
        </a>
        <div class="content">
            <a class="header" href="/profile/<%= user.userId%>"><%= user.name%></a>
            <div class="description">
                <p><span style="color: #666;">Id</span> : <%= user.id%></p>
                <p><span style="color: #666;">Part Name</span> : <%= user.partname%></p>
                <p><span style="color: #666;">Model No.</span> : <%= user.partmodel_no%></p>
                <p><span style="color: #666;">Borrow Time</span>: <%= user.borrowTime%></p>
                <p><span style="color: #666;">Return Time</span>: <%= user.bool == false ? "Not returned" : user.returnTime%></p>
                <p><span style="color: #666;">Admin Approval Created</span>: <%= user.approval == false ? "NA" : "Approval Pending By Admin"%></p>
            </div>
            <div class="extra returnBtn">
                <div class="ui right floated primary button" onclick="returnbook('<%= user.id %>','<%= user.partId %>')">Return the part<i class="right chevron icon"></i> </div>
            </div>
        </div>
    </div>
    <% }) %>
</div>
<script>
    function returnbook(userId,partId){
        window.location.href = '/profile/'+ partId +'/return2/' + userId;
    }
    </script>
<%- include('./layout/footer') %>